{
  "name": "snippets-node",
  "version": "1.0.0",
  "description": "Code snippets used in Node.js documentation on firebase.google.com",
  "author": "Firebase (https://firebase.google.com/)",
  "license": "Apache-2.0",
  "scripts": {
    "lerna-test": "lerna run setup-test && lerna run test",
    "lerna-bootstrap": "lerna bootstrap",
    "lint": "find . -type f -name \"*.js\" -not -path \"*node_modules*\" | xargs eslint",
    "lint-fix": "find . -type f -name \"*.js\" -not -path \"*node_modules*\" | xargs eslint --fix"
  },
  "devDependencies": {
    "eslint": "^5.15.3",
    "eslint-config-google": "^0.12.0",
    "husky": "^3.0.9",
    "lerna": "^3.13.1",
    "lint-staged": "^9.4.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint-fix",
      "git add"
    ]
  }
}
